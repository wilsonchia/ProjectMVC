@using MVCEmp.Models
@model SystemDetailModels
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">

    $(function ($) {
        $('#checkSystemStatus').click(formCheckBox);
        $('btnFormC').click(formCheckData);
    });

    formCheckBox = function () {
        if ($('#checkSystemStatus').prop('checked') == true) {
            $('#hideSystemStatus').val("O");
        } else {
            $('#hideSystemStatus').val("X");
        }
    }

    formCheckData = function () {
        if ($('#textSystemClass').val() == "") { $('showMess').notify("系統類別不得空白!!"); $('textSystemClass').focus(); return false; }
        if ($('#textSystemValue').val() == "") { $('showMess').notify("系統參數值不得空白!!"); $('textSystemValue').focus(); return false; }
        if ($('#textSystemTitle').val() == "") { $('showMess').notify("系統標題不得空白!!"); $('textSystemTitle').focus(); return false; }
    }

</script>
<h2>Create</h2>
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "form1" }))
{
    @Html.Hidden("hideSystemStatus", "")
    <table style="width:800px; text-align:center;font-size:15px;font-weight:bold" border="0" cellpadding="0" cellspacing="0">
        <tr style="height:40px; font-weight:bold; font-size:24px"><td style="width:100%; text-align:center" colspan="4">新增系統參數</td></tr>
        <tr style="height:40px">
            <td style="width:100px; text-align:left">系統類別</td>
            <td style="width:300px; text-align:left">@Html.TextBox("textSystemClass", (string)ViewBag.valSystemClass, new { Style = "width:80%; height:30px" })</td>
            <td style="width:100px; text-align:left">系統數值</td>
            <td style="width:300px; text-align:left">@Html.TextBox("textSystemValue", "", new { Style = "width:80%; height:30px" })</td>
        </tr>
        <tr style="height:40px">
            <td style="width:100px; text-align:left">系統類別</td>
            <td style="width:700px; text-align:left" colspan="3">@Html.TextBox("textSystemTitle", "", new { Style = "width:100%; height:30px" })</td>
        </tr>
        <tr style="height:40px">
            <td style="width:100px; text-align:left">系統說明</td>
            <td style="width:300px; text-align:left">@Html.TextArea("textSystemNotation", "", 10, 200, new { Style = "width:100%" })</td>
            <td style="width:100px; text-align:left">系統備註</td>
            <td style="width:300px; text-align:left">@Html.TextArea("textSystemRemark", "", 10, 200, new { Style = "width:100%" })</td>
        </tr>
        <tr style="height:40px">
            <td style="width:100px; text-align:left">開放使用</td>
            <td style="width:300px; text-align:left">@Html.CheckBox("checkSystemStatus", false) 可使用</td>
            <td style="width:400px; text-align:left" colspan="2"><span id="showMess">@ViewBag.valShowDetail</span></td>
        </tr>
        <tr style="height:40px">
            <td style="width:100%; text-align:center" colspan="4">
                <input type="submit" id="btmFormC" value="Create" />
            </td>
        </tr>
    </table>
}