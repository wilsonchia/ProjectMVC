<!DOCTYPE html>
<html><head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <link href="~/Content/Site.css"  rel="stylesheet" type="text/css" />    
    <script src="~/Scripts/jquery-3.3.1.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js" type="text/javascript"></script>
    <script src="~/Scripts/notify.js"></script>
    <script src="~/Scripts/notify.min.js"></script>
</head>
<body>
    <script type="text/javascript">

        $(function ($) {
            var widthsum = $(window).width();
            var widthavg = eval(eval(widthsum) - eval(1000)) / 2;
            $('#topl').width(widthavg); $('#topr').width(widthavg);
            $('#midl').width(widthavg); $('#midr').width(widthavg);
            $('#downl').width(widthavg); $('#downr').width(widthavg);                        
        });



    </script>
    <table style="width:100%" border="0" cellpadding="0" cellspacing="0">
        <tr class="top"><td id="topl"></td><td style="width:100px"></td><td style="width:900px">@Html.Partial("_TopLayout")</td><td id="topr"></td></tr>
        <tr class="main"><td id="midl"></td><td style="width:1000px" colspan="2">@RenderBody()</td><td id="mainr"></td></tr>
        <tr class="down"><td id="downl"></td><td style="width:1000px" colspan="2"></td><td id="downr"></td></tr>
    </table>
</body></html>
