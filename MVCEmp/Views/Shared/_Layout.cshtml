<body>
    <script type="text/javascript">

        $(function ($) {
            var widthsum = $(window).width();
            var widthavg = eval(eval(widthsum) - eval(1000)) / 2;
            $('#topl').width(widthavg); $('#topr').width(widthavg);
            $('#midl').width(widthavg); $('#midr').width(widthavg);
            $('#downl').width(widthavg); $('#downr').width(widthavg);                        
        });



    </script>
    <table style="width:100%" border="0" cellpadding="0" cellspacing="0">
        <tr class="top"><td id="topl"></td><td style="width:100px"></td><td style="width:900px">
            <table style="width:100%" border="0" cellpadding="0" cellspacing="0">
                <tr style="font-size:18px">
                    <td style="width:100px; text-align:center"><a href="~/SystemDetail/Index" style="color:white">系統公告</a></td>
                    <td style="width:100px; text-align:center"><a href="~/EmployeeDetail/Index" style="color:white">基本資料</a></td>
                    <td style="width:100px; text-align:center"><a href="~/EmployeeJobDetail/Index" style="color:white">職務調動</a></td>
                    <td style="width:100px; text-align:center">休假管理</td>
                    <td style="width:100px; text-align:center">請假管理</td>
                    <td style="width:100px; text-align:center">系統參數</td>
                    <td style="width:100px; text-align:center">簽到管理</td>
                    <td style="width:100px; text-align:center">開發需求</td>
                    <td style="width:100px; text-align:center">系統登出</td>
                </tr>
            </table>
        </td><td id="topr"></td></tr>
        <tr class="main"><td id="midl"></td><td style="width:1000px" colspan="2">@RenderBody()</td><td id="mainr"></td></tr>
        <tr class="down"><td id="downl"></td><td style="width:1000px" colspan="2"></td><td id="downr"></td></tr>
    </table>
</body></html>
